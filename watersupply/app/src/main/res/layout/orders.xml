<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Delivery Location: "
                android:textColor="#000000"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/view_txtDeliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="delivery location"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Order Quantity: "
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/view_txtQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Quantity"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Delivery Date: "
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/view_txtDeliveryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="delivery date"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Email:  "
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/view_txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="email"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="Contact: "
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/view_txtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="contact"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:linksClickable="true"
                android:padding="5dp"
                android:text="User Name: "
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/view_txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="name"
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_UpdateOrder"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#008000"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update Order"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/btn_CancelOrder"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:background="#DC143C"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:paddingRight="10dp"
                android:text="Cancel Order"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
